<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" styleClass="dashboard-container" stylesheets="@../ExpeditionManagement/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Esprit.TripNShip.Controllers.ExpeditionManagement.ClientExpeditionsController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" styleClass="header-container" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-container">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </ImageView>
                <Label styleClass="header-label" text="TripNShip - My Expeditions" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" style="-fx-background-color: white;">
                    <children>
                        <Button fx:id="newExpeditionBtn" mnemonicParsing="false" styleClass="secondary-button" text="New Expedition" />
                        <Button fx:id="refreshBtn" mnemonicParsing="false" styleClass="primary-button" text="Refresh" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </padding>
                    <VBox.margin>
                        <Insets bottom="0.0" />
                    </VBox.margin>
                </HBox>
                <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <content>
                        <TilePane fx:id="expeditionTiles" hgap="20.0" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefColumns="2" prefRows="2" prefTileHeight="200.0" prefTileWidth="450.0" vgap="20.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </TilePane>
                    </content>
                    <VBox.margin>
                        <Insets top="0.0" />
                    </VBox.margin>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>