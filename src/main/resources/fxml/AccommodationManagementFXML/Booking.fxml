<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: #f3f4f6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Esprit.TripNShip.Controllers.BookingController">

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
        <VBox fx:id="bookingContainer" alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
            <VBox maxWidth="600" prefWidth="600" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

                <!-- Image de la chambre -->
                <ImageView fx:id="roomImageView" fitHeight="200" fitWidth="567.0" preserveRatio="true" style="-fx-background-color: lightgray; -fx-background-radius: 15;" />

                <!-- Nom de la chambre -->
                <Label fx:id="roomNameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #111827;" text="Room Name" />

                <!-- Prix -->
                <Label fx:id="priceLabel" style="-fx-font-size: 18px; -fx-text-fill: #4b5563;" text="Price: 0 DT" />

                <!-- Boutons -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <Button fx:id="detailsButton" onAction="#showDetails" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 8;" text="Details" />

                    <Button fx:id="addBookingButton" onAction="#addBooking" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 8;" text="Booking" />
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane>
