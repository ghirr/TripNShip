<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #111827; -fx-pref-width: 100%; -fx-pref-height: 100%;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Esprit.TripNShip.Controllers.BookingFeedbackController">
    <VBox alignment="CENTER" prefHeight="800.0" prefWidth="600.0" spacing="10">
        <StackPane>
            <VBox alignment="CENTER" maxWidth="402.0" prefHeight="623.0" prefWidth="366.0" spacing="20"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 10);
                         -fx-border-color: #9333ea; -fx-border-width: 7; -fx-border-radius: 10;">

                <!-- Logo -->
                <ImageView fitHeight="150" fitWidth="220" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/logo.png" />
                    </image>
                </ImageView>

                <!-- Rating Section -->
                <VBox alignment="CENTER_LEFT" maxWidth="300" spacing="12">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Rating" />
                    <HBox spacing="8">
                        <ToggleButton fx:id="star1" text="★" style="-fx-font-size: 24px; -fx-text-fill: #FFD700; -fx-background-color: transparent;" />
                        <ToggleButton fx:id="star2" text="★" style="-fx-font-size: 24px; -fx-text-fill: #FFD700; -fx-background-color: transparent;" />
                        <ToggleButton fx:id="star3" text="★" style="-fx-font-size: 24px; -fx-text-fill: #FFD700; -fx-background-color: transparent;" />
                        <ToggleButton fx:id="star4" text="★" style="-fx-font-size: 24px; -fx-text-fill: #FFD700; -fx-background-color: transparent;" />
                        <ToggleButton fx:id="star5" text="★" style="-fx-font-size: 24px; -fx-text-fill: #FFD700; -fx-background-color: transparent;" />
                    </HBox>
                </VBox>

                <!-- Comment Section -->
                <VBox alignment="CENTER_LEFT" maxWidth="300" spacing="12">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Comment" />
                    <TextField fx:id="commentField" promptText="Enter your feedback" style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-pref-width: 300;" />
                </VBox>

                <!-- Submit Button -->
                <Button fx:id="submitFeedbackButton" onAction="#handleSubmitFeedback"
                        style="-fx-background-color: linear-gradient(to right, #3b82f6, #9333ea);
                               -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 12;
                               -fx-background-radius: 8; -fx-pref-width: 300; -fx-cursor: hand;"
                        text="Submit" />
            </VBox>
        </StackPane>
    </VBox>
</StackPane>
