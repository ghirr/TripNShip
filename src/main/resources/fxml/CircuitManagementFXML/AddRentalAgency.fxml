<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #111827;"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.Esprit.TripNShip.Controllers.AddRentalAgencyController">

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true"
                style="-fx-background: #111827; -fx-background-color: transparent;">
        <VBox alignment="CENTER" minHeight="-Infinity" spacing="10">
            <StackPane style="-fx-padding: 20;">
                <VBox alignment="CENTER" maxWidth="400" spacing="10.0"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;
                             -fx-border-color: #9333ea; -fx-border-width: 7; -fx-border-radius: 10;">

                    <ImageView fitHeight="128.0" fitWidth="245.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/logo.png" />
                    </ImageView>

                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #222;"
                           text="Add Rental Agency" />

                    <VBox alignment="CENTER_LEFT" maxWidth="300" spacing="12">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Agency Name" />
                        <TextField fx:id="nameField" promptText="Agency Name"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;
                                          -fx-border-color: #ccc; -fx-border-radius: 8;" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Address" />
                        <TextField fx:id="addressField" promptText="Address"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;
                                          -fx-border-color: #ccc; -fx-border-radius: 8;" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Contact" />
                        <TextField fx:id="contactField" promptText="Contact (e.g., phone or email)"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;
                                          -fx-border-color: #ccc; -fx-border-radius: 8;" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Rating" />
                        <TextField fx:id="ratingField" promptText="Rating (e.g., 4.5)"
                                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;
                                          -fx-border-color: #ccc; -fx-border-radius: 8;" />
                    </VBox>

                    <Button fx:id="addAgencyButton" text="Add Agency"
                            style="-fx-background-color: linear-gradient(to right, #3b82f6, #9333ea);
                                   -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 12;
                                   -fx-background-radius: 8; -fx-pref-width: 300; -fx-cursor: hand;" />
                </VBox>
            </StackPane>

            <padding>
                <Insets top="20" bottom="20" />
            </padding>
        </VBox>
    </ScrollPane>
</StackPane>
