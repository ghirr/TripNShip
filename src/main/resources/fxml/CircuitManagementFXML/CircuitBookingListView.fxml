<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.lang.String?>

<StackPane fx:id="stackPane" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.Esprit.TripNShip.Controllers.ListViewCircuitBookingController"
           style="-fx-background-color: #f0f2f5;">

    <!-- Conteneur avec petit espace tout autour -->
    <VBox style="-fx-padding: 15;" alignment="CENTER">
        <HBox spacing="0" prefWidth="Infinity" VBox.vgrow="ALWAYS">
            <!-- Sidebar -->
            <VBox spacing="10" alignment="TOP_LEFT" prefWidth="220"
                  style="-fx-background-color: #3B4B9B; -fx-padding: 20;  -fx-background-radius: 15 0 0 15;">

                <!-- Logo -->
                <VBox spacing="10" alignment="TOP_CENTER" prefWidth="220"
                      style="-fx-background-color: #3B4B9B; -fx-padding: 20px 0px 5px 0px;">

                    <ImageView fitHeight="80" fitWidth="120">
                        <Image url="@../../images/logo.png" />
                    </ImageView>

                    <!-- autres éléments -->
                </VBox>

                <!-- Section: Dashboard -->
                <Label text="MENU" style="-fx-text-fill: #A0AEC0; -fx-font-size: 10px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../../images/icons8-dashboard-24.png"/>
                    </ImageView>
                    <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>

                <!-- Autres boutons -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../../images/icons8-vehicle-50.png"/>
                    </ImageView >
                    <Label text="Vehicle" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../../images/icons8-agency-96.png"/>
                    </ImageView>
                    <Label text="Rental Agency" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../../images/icons8-car-rental-64.png"/>
                    </ImageView>
                    <Label text="Vehicle Booking" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../../images/icons8-trekking-50 (1).png"/>
                    </ImageView>
                    <Label text="Tour Circuit" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../../images/icons8-new-ticket-50.png"/>
                    </ImageView>
                    <Label text="Circuit Booking" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>


            </VBox>


            <!-- Main Content -->
            <VBox spacing="0" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: white; -fx-background-radius: 0 15 15 0;">

                <!-- Navbar -->
                <HBox spacing="10" alignment="CENTER_RIGHT"
                      style="-fx-padding: 10 20 10 20; -fx-background: linear-gradient(to right, #2980B9, #6DD5FA); -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                    <Label text="Welcome, Admin" style="-fx-text-fill: #fff; -fx-font-size: 18px; font-weight: bold;" />
                    <ImageView fitHeight="30" fitWidth="35" style="-fx-border-radius: 100%;">
                        <Image url="@../../images/user_icon.jpg" />
                    </ImageView>
                </HBox>

                <!-- Content Area -->
                <BorderPane maxHeight="800" maxWidth="10000"
                            style="-fx-background-radius: 15; -fx-padding: 20; background-color: #fafafa;"
                            stylesheets="@../../Styles/ListUser.css">

                    <!-- Top Section -->
                    <top>
                        <VBox spacing="15" style="-fx-padding: 25px 30px 15px 30px;">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Label text="Circuit Bookings"
                                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498DB;" />
                                <Pane HBox.hgrow="ALWAYS" />
                                <Button fx:id="addTourCircuitButton" text="Add Booking"
                                        onAction="#showAddCircuitBookingPopup"
                                        style="-fx-background-color: linear-gradient(to right, #8e44ad, #2980b9);
               -fx-text-fill: white; -fx-font-weight: bold;
               -fx-background-radius: 25; -fx-padding: 8 18 8 18;
               -fx-font-size: 14px;">

                                    <graphic>
                                        <ImageView fitWidth="22" fitHeight="22">
                                            <Image url="@../../images/icons8-plus-64 (1).png" />
                                        </ImageView>
                                    </graphic>

                                </Button>

                            </HBox>

                            <!-- Search & Filters -->
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ComboBox fx:id="statusComboBox" onAction="#handleStatusFilter" />
                                <Button fx:id="exportExcelButton" text="Excel"
                                        onAction="#showAddCircuitBookingPopup"
                                        style="-fx-background-color: linear-gradient(to right, #8e44ad, #2980b9);
               -fx-text-fill: white; -fx-font-weight: bold;
               -fx-background-radius: 25; -fx-padding: 4 14 4 14;
               -fx-font-size: 12px;">

                                    <graphic>
                                        <ImageView fitWidth="20" fitHeight="20">
                                            <Image url="@../../images/icons8-export-excel-50.png" />
                                        </ImageView>
                                    </graphic>

                                </Button>
                            </HBox>
                        </VBox>
                    </top>

                    <!-- Table + Pagination -->
                    <center>
                        <VBox spacing="25" style="-fx-padding: 0 40px 30px 30px;">
                            <TableView fx:id="circuitBookingTable" VBox.vgrow="ALWAYS"
                                       style="-fx-border-color: transparent; -fx-background-radius: 10; -fx-border-radius: 10;">
                                <columns>
                                    <TableColumn fx:id="colBookingDate" prefWidth="120" text="Date" />
                                    <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                                    <TableColumn fx:id="colCustomerName" prefWidth="180" text="User" />
                                    <TableColumn fx:id="colTourName" prefWidth="140" text="Tour Circuit" />
                                    <TableColumn fx:id="colActions" text="Actions" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                                <styleClass>
                                    <String fx:value="modern-table" />
                                </styleClass>
                            </TableView>


                            <!-- Pagination -->
                            <HBox alignment="CENTER" spacing="5">
                                <Pagination fx:id="pagination" pageCount="3" maxPageIndicatorCount="5"
                                            style="-fx-page-information-visible: false; -fx-arrows-visible: true; -fx-background-color: transparent;"
                                            HBox.hgrow="ALWAYS" styleClass="styled-pagination" />
                            </HBox>
                        </VBox>
                    </center>
                </BorderPane>
            </VBox>
        </HBox>
    </VBox>
</StackPane>
